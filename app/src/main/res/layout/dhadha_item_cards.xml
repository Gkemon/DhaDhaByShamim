<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view_for_items"
    android:layout_width="match_parent"

    android:layout_height="wrap_content"
    card_view:cardElevation="5dp"
    android:layout_margin="10dp"
    card_view:cardCornerRadius="10dp">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:padding="12dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/dhadha_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="3"
            android:text="Offer 70% off"
            android:textColor="#512da8"
            android:textStyle="normal" />
        <Button
            android:layout_weight="1"
            android:layout_width="30dp"
            android:id="@+id/anwer_button"
            android:text="উত্তর দেখুন"
            android:layout_height="match_parent" />

    </LinearLayout>
    <binarygeek.dhadhabyshamim.HelperClasses.SecretTextView
        android:layout_margin="@dimen/activity_vertical_margin"
        android:id="@+id/answer"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="This is a demo of Matt Kula's Secret TextView"
        android:textSize="30sp"
        android:textColor="@android:color/black"
        />
</LinearLayout>

</android.support.v7.widget.CardView>